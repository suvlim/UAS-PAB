<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/white_card">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txvTanggalTanam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Tanam : 01/01/2001"
                    android:textSize="6pt"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/txvTanggalPanen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Panen  : 01/01/2001"
                    android:textSize="6pt"
                    android:textColor="@color/black" />

            </LinearLayout>
            <ImageView
                android:id="@+id/imvGambarTanaman"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/corn"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/txvJenisTanaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="6pt"
                android:textColor="@color/black"
                android:text="Padi"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>